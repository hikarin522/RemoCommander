<p>@L["Home.Welcome"]</p>

@if (string.IsNullOrEmpty(token))
{
    <div class="alert alert-info">
        <h4>@L["Appliances.SetupRequired"]</h4>
        <p>@L["Appliances.EnterToken"]</p>
        <p class="mb-2">
            <a href="https://home.nature.global/" target="_blank" rel="noopener noreferrer" class="text-decoration-none">
                üîó @L["Home.GetToken"]
            </a>
        </p>
        <div class="mb-3">
            <label for="tokenInput" class="form-label">@L["Appliances.AccessToken"]</label>
            <input @bind="tokenInput" type="password" class="form-control" id="tokenInput" placeholder="@L["Appliances.TokenPlaceholder"]" />
        </div>
        <button class="btn btn-primary" @onclick="SaveToken">@L["Appliances.Save"]</button>
    </div>
}
else
{
    <div class="alert alert-success">
        <p>@L["Home.TokenConfigured"]</p>
        <NavLink href="appliances" class="btn btn-primary me-2">@L["Home.GoToAppliances"]</NavLink>
        <button class="btn btn-secondary" @onclick="ClearToken">@L["Appliances.ClearToken"]</button>
    </div>
}
